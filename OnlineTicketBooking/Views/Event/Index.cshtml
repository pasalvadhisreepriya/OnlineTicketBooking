@model IEnumerable<OnlineTicketBookingWeb.Models.EventViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   }


<h1>EventList</h1>

@*<p>
    <a asp-action="AddCourse">Create New Event</a>
</p>*@
 @if (User.IsInRole("Admin"))
                    {
<div class="col text-end pt-1">
    <a asp-controller="Event" asp-action="AddCourse" class="btn btn-outline-primary">Create New Event</a>
</div>
                    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDescription)
            </td>
            <td>
                    @Convert.ToString(item.EventDate.ToString("dd-mm-yyyy"))
                  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="CreateBooking" asp-route-eventid="@item.EventId" asp-controller="TicketBooking">Book</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a type="button" class="btn btn-success" asp-action="editpage" asp-route-id="@item.EventId" asp-controller="Event">Update</a>

                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EventId" asp-controller="Event">Delete</a>
                    }

            </td>
        </tr>
}
    </tbody>
</table>

